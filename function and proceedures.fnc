--REAL FUNCTION WORKS 1
CREATE OR REPLACE FUNCTION student_activity(student_name IN VARCHAR2)
RETURN VARCHAR2 IS 
    ACTIVITY_STATS VARCHAR2(6);
    IS_ACTIVE INT;
BEGIN
    SELECT COUNT(student_name) INTO IS_ACTIVE FROM student;
    IF IS_ACTIVE >0 THEN
        ACTIVITY_STATS:='YES!';
    ELSE
        ACTIVITY_STATS:='NO';
    END IF;
    --DBMS_OUTPUT.PUT_LINE('ACTIVITY STATUS : '||ACTIVITY_STATS);
    RETURN ACTIVITY_STATS;
END;
--COUNTING TABLE DATA 
CREATE OR REPLACE FUNCTION count_table(stmnt IN VARCHAR2)
RETURN INT IS
    COUNT_TABLE INT;
BEGIN
    SELECT COUNT(*) INTO COUNT_TABLE FROM tab WHERE TNAME = stmnt;
    DBMS_OUTPUT.PUT_LINE('WARNING! USE CAPITAL LETTER FOR SEARCHING IF TABLE EXISTS');
    RETURN COUNT_TABLE;
END;
-- RECURTION WITH FUNCTION

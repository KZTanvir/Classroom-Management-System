--EXECUTE THE FUCTIONS
BEGIN
DBMS_OUTPUT.PUT_LINE(student_activity('TANVIR_55'));
DBMS_OUTPUT.PUT_LINE(count_table('STUDENT'));
END;


-- PROCEDURE IN PLSQL

CREATE OR REPLACE PROCEDURE IMPORT_STD(std_name IN VARCHAR2, std_f_name IN VARCHAR2, std_m_name IN VARCHAR2,std_roll IN INT, std_class IN INT, std_year IN INT)
AS
BEGIN
    INSERT INTO 
        student
    VALUES(
        NULL, std_name, NULL, NULL, std_f_name, std_m_name, NULL, std_roll, std_class, std_year
        );
    DBMS_OUTPUT.PUT_LINE('EXECUTED PROCEDURE!');
END;
